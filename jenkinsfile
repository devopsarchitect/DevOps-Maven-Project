pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                /* `make check` returns non-zero on test failures,
                * using `true` to allow the Pipeline to continue nonetheless
                
                sh 'make check || true' 
                junit '**/target/*.xml' 
                */
                sh mvn clean package
            }
            post {
            	success {
            		echo 'now archive'
            		archiveArtifacts artifacts:'**/target/*.war'
            	}

            }

        }
    }
}